[Unit]
Description= Airflow webserver
Wants=basic.target
After=basic.target network.target

[Service]
PIDFile = <%= @run_folder %>/airflow_webserver.pid
ExecStart=/usr/bin/airflow webserver -w=<%= @gunicorn_workers %> -t 120 -hn=<%= @web_server_host %> -p=<%= @web_server_port %>
ExecReload=/bin/kill -HUP $MAINPID
Environment="AIRFLOW_HOME=<%= @home_folder %>"
KillMode=process
Restart=on-failure
RestartSec=15s
User=<%= @user %>
Group=<%= @group %>

[Install]
WantedBy=multi-user.target





