[Unit]
Description= Airflow worker
Wants=basic.target
After=basic.target network.target

[Service]
Type=simple
ExecStart=/usr/bin/airflow worker
Environment="AIRFLOW_HOME=<%= @home_folder %>"
Environment="C_FORCE_ROOT=<%= @allow_root_worker %>"
Restart=on-failure
RestartSec=15s
User=<%= @user %>
Group=<%= @group %>

[Install]
WantedBy=multi-user.target
